{
    "env": {
        "es2021": true,
        "node": true,
        "commonjs": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": 0,
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-empty": "error",
        "no-func-assign": "error",
        "no-case-declarations": "off",
        "no-unreachable": "error",
        "no-eval": "error",
        "no-global-assign": "error",
        "indent": [
            "error",
            2
        ]
    }
}